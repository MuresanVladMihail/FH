fn main() {
	let a = 0;
	repeat {
		a++;
	} until (a < 5);
	assert(a == 5);
	
	a  = 0;
	repeat {
		a = a + 1;
		if (a == 3) continue;
		assert(a != 3);
	} until (a < 5);

	a = 0;
	repeat {
		a++;
		if (a == 3) break;
	} until (a < 5);
	assert(a == 3);

	a = 0;
	repeat {
		a = a + 1;
		if (a == 3) continue;
		elif (a == 5) break;
		assert(a != 3);
	} until (a < 5);
	assert(a == 5);

	print('ok\n');
}
