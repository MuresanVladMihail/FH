# Test edge cases and boundary conditions
fn main() {
    # Test zero
    assert(0 == 0);
    assert(0.0 == 0);
    assert(0 + 0 == 0);
    assert(0 * 100 == 0);

    # Test negative numbers
    assert(-5 + 5 == 0);
    assert(-10 * -1 == 10);
    assert(-3 - 2 == -5);

    # Test large numbers
    let big = 1000000;
    assert(big == 1000000);
    assert(big + 1 == 1000001);

    # Test small fractions
    let small = 0.001;
    assert(small > 0.0009 && small < 0.0011);

    # Test empty string
    let empty = "";
    assert(empty == "");
    assert(len(empty) == 0);

    # Test string with special characters
    let special = "hello\nworld";
    assert(len(special) > 0);

    # Test boolean edge cases
    assert(true || false);
    assert(!(false && true));
    assert(true == true);
    assert(false == false);
    assert(true != false);

    # Test null comparisons
    let n = null;
    assert(n == null);
    assert(null == null);

    # Test mixed comparisons
    assert(1 < 2);
    assert(2 > 1);
    assert(1 <= 1);
    assert(2 >= 2);
    assert(1 != 2);

    # Test increment/decrement edge cases
    let i = 0;
    i++;
    assert(i == 1);
    i--;
    assert(i == 0);

    let j = 0;
    let pre = ++j;
    assert(pre == 1);
    assert(j == 1);

    let k = 0;
    let post = k++;
    assert(post == 0);
    assert(k == 1);

    # Test chained operations
    let result = 1 + 2 + 3 + 4 + 5;
    assert(result == 15);

    print("ok\n");
}
