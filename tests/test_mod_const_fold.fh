# Test modulo constant folding
fn main() {
    # These should be folded at compile time
    let a = 10 % 3;    # 1
    let b = 17 % 5;    # 2
    let c = 100 % 7;   # 2
    let d = 15 % 4;    # 3

    printf("Constant folding results:\n");
    printf("10 %% 3 = %d (expected 1)\n", a);
    printf("17 %% 5 = %d (expected 2)\n", b);
    printf("100 %% 7 = %d (expected 2)\n", c);
    printf("15 %% 4 = %d (expected 3)\n", d);

    # Runtime modulo (not folded)
    let x = 17;
    let y = x % 5;
    printf("\nRuntime: 17 %% 5 = %d (expected 2)\n", y);
}
